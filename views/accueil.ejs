        function fadeIn(element, duration) {
          let opacity = 0;
          const interval = 10;
          const delta = interval / duration;

          function tick() {
            opacity += delta;
            element.style.opacity = opacity;

            if (opacity < 1) {
              setTimeout(tick, interval);
            }
          }

          tick();
        }
      });
    </script>



